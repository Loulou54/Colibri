<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/crayon" >
    
    <TextView
        android:id="@+id/nomDefi"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="2dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="0dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/theme_vert"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:scrollHorizontally="true" />
    
    <TextView
        android:id="@+id/nMatch"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="@string/score"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <Button
        android:id="@+id/etat"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bouton_papier"
        android:focusable="false"
        android:text="@string/etat"
        android:onClick="actionDefi" />
    
    <Button
        android:id="@+id/fermer"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:focusable="false"
        android:layout_gravity="right"
        android:contentDescription="@string/app_name"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:onClick="supprDefi" />

</LinearLayout>
