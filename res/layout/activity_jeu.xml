<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jeu" >

  <com.game.colibri.Carte
    android:id="@+id/carte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/herbe" />

  <Button
        android:id="@+id/bout_dyna"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bouton_dyna"
        android:alpha="0.8"
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:paddingLeft="48dp"
        android:onClick="exploser"
        android:textSize="16sp" />
  
<RelativeLayout 
    android:id="@+id/pause"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:visibility="invisible" >
    
     <Button
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="@string/reprendre"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="reprendre" />
    
    <Button
        android:id="@+id/but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but1"
        android:layout_below="@+id/but1"
        android:background="@drawable/button"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/recommencer"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="recommencer" />
    
    <Button
        android:id="@+id/but3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but2"
        android:layout_below="@+id/but2"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="@string/sortir"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="quitter" />
    
    <Button
        android:id="@+id/but4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but3"
        android:layout_below="@+id/but3"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="@string/solution"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="solution" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="100dp"
        android:textSize="30sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:text="@string/pause" />
    
</RelativeLayout>

<RelativeLayout 
    android:id="@+id/gagner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:visibility="invisible" >
    
    <TextView
        android:id="@+id/bravo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/bravo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bleu"
        android:textSize="32sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/resultats"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bravo_txt"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/saumon"
        android:text="@string/app_name"
        android:background="@android:drawable/alert_light_frame"
         />
    
    <Button
        android:id="@+id/continuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/continuer"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="suivant" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/continuer"
        android:layout_marginRight="38dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="@string/sortir"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="quitter" />
    
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/perdu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/cyan"
        android:visibility="invisible" >

        <Button
            android:id="@+id/replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp"
            android:background="@drawable/replay"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:onClick="recommencer" />

        <Button
            android:id="@+id/sortie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/replay"
            android:layout_marginRight="38dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="@string/sortir"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:onClick="quitter" />

    </RelativeLayout>

    <include layout="@layout/activity_gagne_multi"/>
    
    <include layout="@layout/activity_gagne_multi2"/>
    
</RelativeLayout>

