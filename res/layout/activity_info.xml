<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/information"
    android:orientation="vertical"
    tools:context=".MenuPrinc" >
    
    <Button
        android:id="@+id/info_sortir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boutons2"
        android:gravity="center"
        android:text="@string/sortir"
        android:textColor="@android:color/white"
        android:onClick="retour"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/info_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/noir"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />
        
    <TextView
        android:id="@+id/info_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/info_sortir"
        android:layout_below="@+id/info_text1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/info_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp"
        android:typeface="serif" />
    
    <TextView
        android:id="@+id/info_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_text2"
        android:layout_alignRight="@+id/info_text2"
		android:layout_below="@+id/info_text2"
        android:gravity="center"
        android:text="@string/info_text2"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>
