<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/classAdv"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/theme_vert"
        android:textStyle="bold"
        android:text="@string/tiret" />
    
    <ImageView
        android:id="@+id/avatarAdv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:src="@drawable/colibri_d1" />

    <TextView
        android:id="@+id/nomAdv"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:textSize="18sp"
        android:textColor="@color/choco"
        android:text="@string/joueur"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:scrollHorizontally="true" />
    
    <ImageView
        android:id="@+id/paysAdv"
        android:layout_width="0dip"
        android:layout_height="20dp"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:src="@drawable/colibri_d1" />
    
    <TextView
        style="@style/valueListJoueur"
        android:id="@+id/expAdv"
        android:textSize="13sp"
        android:layout_weight="3" />
    
    <TextView
        style="@style/valueListJoueur"
        android:id="@+id/scoreAdv"
        android:textSize="14sp"
        android:layout_weight="3" />
    
    <TextView
        style="@style/valueListJoueur"
        android:id="@+id/defisAdv"
        android:textSize="13sp"
        android:layout_weight="2" />
    
    <TextView
        style="@style/valueListJoueur"
        android:id="@+id/winDefisAdv"
        android:textSize="13sp"
        android:layout_weight="2" />
	
    <TextView
        style="@style/valueListJoueur"
        android:id="@+id/winLostAdv"
        android:textSize="13sp"
        android:layout_weight="2" />

</LinearLayout>
