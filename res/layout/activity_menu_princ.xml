<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".MenuPrinc" >
    
    <Button
        android:id="@+id/bout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bout1"
        android:layout_below="@+id/bout1"
        android:layout_marginTop="4dp"
        android:background="@drawable/boutons"
        android:gravity="center"
        android:text="@string/campagne"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/bout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bout2"
        android:layout_below="@+id/bout2"
        android:layout_marginTop="4dp"
        android:background="@drawable/boutons"
        android:gravity="center"
        android:text="@string/aleat"
        android:textColor="@android:color/white"
        android:onClick="aleatoire"
        android:textSize="16sp" />
    
    <LinearLayout
        android:id="@+id/opt_aleat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bout2"
        android:layout_below="@+id/bout2"
        android:orientation="vertical"
        android:visibility="invisible" >
	    <Button
	        android:id="@+id/facile"
	        android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:layout_marginTop="6dp"
	        android:background="@drawable/boutons2"
	        android:gravity="center"
	        android:text="@string/fac"
	        android:textColor="@android:color/white"
	        android:onClick="facile"
	        android:textSize="14sp" />
	    <Button
	        android:id="@+id/moyen"
	        android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
	        android:layout_marginTop="6dp"
	        android:background="@drawable/boutons2"
	        android:gravity="center"
	        android:text="@string/moy"
	        android:textColor="@android:color/white"
	        android:onClick="moyen"
	        android:textSize="14sp" />
	    <Button
	        android:id="@+id/difficile"
	        android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
	        android:layout_marginTop="6dp"
	        android:background="@drawable/boutons2"
	        android:gravity="center"
	        android:text="@string/dif"
	        android:textColor="@android:color/white"
	        android:onClick="difficile"
	        android:textSize="14sp" />
	</LinearLayout>
    
    <Button
        android:id="@+id/bout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bout3"
        android:layout_below="@+id/bout3"
        android:layout_marginTop="4dp"
        android:background="@drawable/boutons"
        android:gravity="center"
        android:text="@string/multi"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/bout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bout4"
        android:layout_below="@+id/bout4"
        android:layout_marginTop="4dp"
        android:background="@drawable/boutons"
        android:gravity="center"
        android:text="@string/instructions"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/boutons"
        android:gravity="center"
        android:onClick="continuer"
        android:text="@string/jouer"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
